{
  "name": "decent",
  "version": "0.0.1",
  "description": "The decentralized chat system that's absolutely okay",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/towerofnix/decent.git"
  },
  "keywords": [
    "chat",
    "chat-system",
    "social"
  ],
  "author": "Multiple contributors",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/towerofnix/decent/issues"
  },
  "homepage": "https://github.com/towerofnix/decent#readme",
  "main": "index.js",
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "fix-whitespace": "^1.0.3",
    "multer": "^1.3.0",
    "nedb": "^1.8.0",
    "nedb-promise": "^2.0.1",
    "shortid": "^2.2.8",
    "uuid": "^3.1.0",
    "vue": "^2.5.11",
    "vue-async-computed": "^3.3.1",
    "ws": "^3.3.2"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^8.0.0",
    "browserify": "^14.5.0",
    "browserify-hmr": "^0.3.6",
    "cross-env": "^5.1.1",
    "envify": "^4.1.0",
    "http-server": "^0.10.0",
    "npm-run-all": "^4.1.2",
    "uglify-js": "^3.2.2",
    "vueify": "^9.4.1",
    "watchify": "^3.9.0"
  },
  "scripts": {
    "watch": "watchify -vd -p browserify-hmr -e ./site/src/index.js -o ./site/dist/build.js",
    "serve": "http-server -o -s -c 1 -a localhost",
    "dev": "npm-run-all --parallel watch serve",
    "build": "cross-env NODE_ENV=production browserify -g envify ./site/src/index.js | uglifyjs -c warnings=false -m > ./site/dist/build.js"
  },
  "browserify": {
    "transform": [
      "vueify",
      "babelify"
    ]
  },
  "browser": {
    "vue": "vue/dist/vue.common.js"
  }
}
